{
  "expo": {
    "name": "Shelton Springs",
    "slug": "shelton-springs",
    "version": "1.1.3",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "sheltonsprings",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "backgroundColor": "#ffffff",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rubenjim.sheltonsprings",
      "buildNumber": "1",
      "splash": {
        "backgroundColor": "#ffffff",
        "resizeMode": "cover"
      },
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to take profile photos and post images (post, pets, sell/moving screens) ",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select profile images and post photos (post, pets, sell/moving screens)",
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.rubenjim.sheltonsprings",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES"
      ],
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "favicon": "./assets/favicon.jpg"
    },
    "experiments": {
      "typedRoutes": true,
      "baseUrl": "/"
    },
    "extra": {
      "convexUrl": "${EXPO_PUBLIC_CONVEX_URL}",
      "router": {
        "origin": "https://sheltonsprings.homes"
      },
      "eas": {
        "projectId": "1e1b6e75-8ac2-4fe8-8cff-46c325df0d32"
      }
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://sheltonsprings.homes"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      "expo-web-browser",
      "expo-font",
      "expo-video"
    ]
  }
}
